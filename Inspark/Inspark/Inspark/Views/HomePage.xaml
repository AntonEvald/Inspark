<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inspark.Views.HomePage"
             x:Name="HomePage"
             xmlns:Viewmodels="clr-namespace:Inspark.Viewmodels;assembly=Inspark">
    <Grid RowSpacing="25">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ContentView x:Name="HomePageContent" Grid.RowSpan="2">
            <ContentView.Content>
                <StackLayout Grid.RowSpan="2" Grid.Column="0">
                    <StackLayout Grid.Row="0" Grid.Column="0" BackgroundColor="LightPink">
                        <StackLayout.BindingContext>
                            <Viewmodels:NewsViewModel/>
                        </StackLayout.BindingContext>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="NewsTapped" NumberOfTapsRequired="1"/>
                        </StackLayout.GestureRecognizers>
                        <Label Text="Nyheter" HorizontalOptions="Center"/>
                        <ListView x:Name="NewsList" ItemsSource="{Binding News}">
                        </ListView>
                    </StackLayout>
                    <StackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="LightBlue">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="GroupTapped" NumberOfTapsRequired="1"/>
                        </StackLayout.GestureRecognizers>
                        <Label Text="Grupp" HorizontalOptions="Center"/>
                        <ListView x:Name="GroupList">

                        </ListView>
                    </StackLayout>
                </StackLayout>
            </ContentView.Content>
        </ContentView>
    </Grid>
</ContentPage>