<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inspark.Views.HomePage"
             x:Name="HomePage">
    <Grid RowSpacing="25">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ContentView x:Name="HomePageContent">
            <ContentView.Content>
                <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="LightPink">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="News_Tapped"/>
                    </StackLayout.GestureRecognizers>
                    <Label Text="Nyheter" HorizontalOptions="Center"/>
                    <ListView>

                    </ListView>
                </StackLayout>
                <StackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="LightBlue">
                    <Label Text="Grupp" HorizontalOptions="Center"/>
                    <ListView>

                    </ListView>
                </StackLayout>
            </ContentView.Content>
        </ContentView>
    </Grid>
</ContentPage>