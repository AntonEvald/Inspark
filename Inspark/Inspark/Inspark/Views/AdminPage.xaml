<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inspark.Views.AdminPage"
             xmlns:Viewmodels="clr-namespace:Inspark.Viewmodels;assmebly=Inspark">
    <ContentView x:Name="InsparkAdmin">
        <ContentPage.Content>
            <ScrollView>
                <StackLayout Padding="20">
                    <StackLayout>
                            <Button Text="Skapa introduktionsgrupp" BackgroundColor="LightBlue" Clicked="CreateGroupButton_Clicked"/>
                            <Button Text="Ändra introduktionsgrupp" BackgroundColor="LightBlue" Clicked="ChangeGroupButton_Clicked"/>
                            <Button Text="Ta bort introduktionsgrupp" BackgroundColor="LightBlue"/>
                            <Button Text="Lägg till användare från introduktionsgrupp" BackgroundColor="LightBlue"/>
                            <Button Text="Ta bort användare från introduktionsgrupp" BackgroundColor="LightBlue"/>
                            <Button Text="Lägg in resultat från tävling" BackgroundColor="LightBlue"/>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </ContentPage.Content>
    </ContentView>
</ContentPage>