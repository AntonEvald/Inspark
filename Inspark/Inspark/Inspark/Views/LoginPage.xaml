<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inspark.Views.LoginPage"
             Title="Logga in">
    <ContentPage.Content>
        <StackLayout
            Padding="10"
            VerticalOptions="Fill">
            <Label
                Text="Email:"
                FontSize="Large"/>
            <Entry
                Text="Email"/>
            <Label
                Text="Lösenord:"
                FontSize="Large"/>
            <Entry
                Text="Lösenord"
                IsPassword="True"/>
            <Button
                Text="Logga in"
                Command="{Binding LoginClick}"/>
            <StackLayout 
                Orientation="Horizontal"
                HorizontalOptions="StartAndExpand">
                <Label
                Text="Håll mig inloggad:"/>
                <Switch/>
                <Button
                    Text="?"
                    HeightRequest="50"
                    WidthRequest="50"
                    Margin="200, 0, 0, 0"
                    HorizontalOptions="End"/>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>