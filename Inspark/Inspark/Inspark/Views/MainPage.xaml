<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Inspark.Views"
             x:Class="Inspark.Views.MainPage">
    
    <!-- Skapar fem stycken rader för hela sidan. -->
    <Grid ColumnSpacing="0" RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="56"/>
        </Grid.RowDefinitions>

        <!-- Skapar fem kolumner i den första raden. -->
        <Grid ColumnSpacing="0" RowSpacing="0" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Specificerar värdet för varje kolumn i första raden. -->
            <StackLayout VerticalOptions="Center" Spacing="0" Grid.Column="0">
                <Image HeightRequest="30" Source="hammenu.png"/>
            </StackLayout>
            
            <StackLayout Spacing="0" Grid.Column="1">
            </StackLayout>
            
            <StackLayout Spacing="0" Grid.Column="2">
            </StackLayout>
            
            <StackLayout Spacing="0" Grid.Column="3">
            </StackLayout>

            <StackLayout VerticalOptions="Center" Spacing="0" Grid.Column="4">
                <Image HeightRequest="30" Source="profile.png"/>
            </StackLayout>
        </Grid>
        
        <!-- Specificerar vad de övriga raderna ska göra/innehålla. Rad 1 och 3 är en "border" rad. 
             Rad 2 är en ContentView där allt vårt innehåll från en View hamnar efter knapptryck. -->
        <BoxView BackgroundColor="LightGray" Grid.Row="1"/>
        <ContentView x:Name="Inspark" Grid.Row="2"/>
        <BoxView BackgroundColor="LightGray" Grid.Row="3"/>

        <!-- Skapar fem kolumner i den sista raden. -->
        <Grid ColumnSpacing="0" RowSpacing="0" Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Specificerar värdet för varje kolumn i sista raden. -->
            <StackLayout VerticalOptions="Center" Spacing="0" Grid.Column="0">
                <Image HeightRequest="30" Source="home.png"/>
                <Label Text="Hem" FontSize="10"
                       HorizontalOptions="Center"/>
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="HomeIcon_Tapped"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>

            <StackLayout VerticalOptions="Center" Spacing="0" Grid.Column="1">
                <Image HeightRequest="30" Source="group.png"/>
                <Label Text="Grupp" FontSize="10"
                       HorizontalOptions="Center"/>
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="GroupIcon_Tapped"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>

            <StackLayout VerticalOptions="Center" Spacing="0" Grid.Column="2">
                <Image HeightRequest="30" Source="competition.png"/>
                <Label Text="Tävling" FontSize="10"
                       HorizontalOptions="Center"/>
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="CompetitionIcon_Tapped"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>

            <StackLayout VerticalOptions="Center" Spacing="0" Grid.Column="3">
                <Image HeightRequest="30" Source="chat.png"/>
                <Label Text="Chatt" FontSize="10"
                       HorizontalOptions="Center"/>
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="ChatIcon_Tapped"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>

            <StackLayout VerticalOptions="Center" Spacing="0" Grid.Column="4">
                <Image HeightRequest="30" Source="schedule.png"/>
                <Label Text="Schema" FontSize="10"
                       HorizontalOptions="Center"/>
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="ScheduleIcon_Tapped"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>