<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inspark.Views.SchedulePage"
             Icon="ic_today_black_24dp.png"
             xmlns:vm="clr-namespace:Inspark.Viewmodels; assembly=inspark">
    <ContentPage.BindingContext>
        <vm:ScheduleViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout
            Padding="10">
            <Entry
                Placeholder="Sök i Schema"/>
            <StackLayout
                Padding="10"
                Orientation="Horizontal">
                <Label
                    Text="Dagens datum"
                    FontSize="Large"/>
                <Picker
                    ItemsSource="{Binding Schedules}"/>
            </StackLayout>
                <ScrollView>
                    <ListView>

                    </ListView>
                </ScrollView>
                <Button
                    Text="Inställningar"/>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>