<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inspark.Views.SchedulePage"
             xmlns:vm="clr-namespace:Inspark.Viewmodels; assembly=inspark"
             xmlns:controls="clr-namespace:XamForms.Controls;assembly=XamForms.Controls.Calendar">
             <ContentPage.BindingContext>
        <vm:ScheduleViewModel/>
    </ContentPage.BindingContext>
    <controls:Calendar Padding="10,0,10,0" StartDay="Monday" DateCommand="{Binding DateChosen}" SelectedBorderWidth="4" DisabledBorderColor="Black" SelectedDate="{Binding Date}"/>
</ContentPage>