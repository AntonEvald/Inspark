<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inspark.Views.SearchUserPage"
             xmlns:viewModels="clr-namespace:Inspark.Viewmodels">
    <ContentPage.BindingContext>
        <viewModels:SearchUserViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" 
                     Spacing="0" 
                     Margin="10, 20, 10, 0">
            <Label Text="Skriv en bokstav för att börja filtrera"
                   FontSize="16"
                   TextColor="LightGray"/>
            <SearchBar x:Name="ColorsSearchBar"
                       Text="{Binding Keyword}"
                       SearchCommand="{Binding SearchCommand}"
                       HeightRequest="40"/>

            <!-- TextChanged="Handle_TextChanged"-->
            
            <Grid>
                <ListView x:Name="ColorsListView"/>
                <ListView x:Name="SuggestionsListView"
                          ItemsSource="{Binding Suggestions}"
                          ItemTapped="Handle_ItemTapped"
                          BackgroundColor="Silver"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>