<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inspark.Views.AddCodePage">
    <ContentPage.Content>
        <StackLayout Padding="40">
            <Label Text="Ange din introduktionkod: " FontSize="Large" HorizontalOptions="Center"/>
            <Entry Text="{Binding EnteredCode}" HorizontalOptions="Center" WidthRequest="150"/>
            <Button Text="OK" Command="{Binding OK_Command}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>