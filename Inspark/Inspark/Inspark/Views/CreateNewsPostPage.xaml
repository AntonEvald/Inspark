<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inspark.Views.CreateNewsPostPage"
             xmlns:vm="clr-namespace:Inspark.Viewmodels;assembly=Inspark">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout.BindingContext>
                <vm:NewsViewModel/>
            </StackLayout.BindingContext>
            <Label Text="Skriv ett inlägg..."/>
            <Entry Text="{Binding PostTitle}" Placeholder="Title"/>
            <Editor Text="{Binding PostText}"/>
            <Button Text="Lägg till bild" Command="{Binding AddPicCommand}"/>
            <Button Text="Posta inlägg" Command="{Binding PostCommand}"/>
            <Button Text="Avbryt"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>